create func1(temperature) {
	if temperature < 180 {
		serve("Temperature is too low to bake!");
		burn("Cake burned!");  # stops function execution immediately
	} else {
		serve("Baking cake at", temperature, "degrees!");
		deliver "Cake is ready!";
	}
}

create func2(x, y) {
    let a = x + y + 1;
    let b = a + 3;
    deliver a;
}

create func3(x) {
    serve("X:", x);
}

create func4() {
    deliver -5;
}


let result1 = func1(200);
serve("Result 1:", result1);

let result2 = func2(2, 8);
serve("Result 2:", result2);

let result3 = func3(2);
func3(5);
serve("Result 3:", result3);  # all functions return 0 by default

let result4 = func4();
serve("Result 4:", result4);
