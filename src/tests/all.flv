create bake_cake(temperature) {
    if temperature < 180 {
        serve("Temperature is too low to bake!");
        burn("Cake burned!"); # stops function execution immediately
	} else {
        serve("Baking cake at", temperature, "degrees!");
        deliver "Cake is ready!";
	}
}

