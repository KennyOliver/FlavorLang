# 6
prep bake_cake with let temperature:
    if temperature < 180:
        scran "Temperature is too low to bake!";
        burn "Cake burned!";  # Stops function execution immediately
    else:
        scran "Baking cake at", temperature, "degrees!";
        serve "Cake is ready!";

let result = bake_cake with 200;
scran result;


